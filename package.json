{
	"name": "@willclarktech/tsconfig",
	"version": "0.0.0",
	"description": "Default TypeScript configuration for personal projects.",
	"files": [
		"*.json",
		"*.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/willclarktech/tsconfig-willclarktech"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"engines": {
		"node": "^22",
		"npm": "^10"
	},
	"keywords": [
		"typescript",
		"tsconfig"
	],
	"scripts": {
		"format": "prettier --ignore-path .gitignore --write .",
		"format:check": "npm run format -- --check",
		"verify": "npm run format:check",
		"prepare": "npm run verify"
	},
	"devDependencies": {
		"prettier": "^3.4.2"
	},
	"peerDependencies": {
		"typescript": "^5.5"
	}
}
