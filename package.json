{
	"name": "tsconfig-willclarktech",
	"version": "0.0.0",
	"description": "Default TypeScript configuration for personal projects.",
	"files": [
		"*.json",
		"*.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/willclarktech/tsconfig-willclarktech"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"engines": {
		"node": ">=20",
		"npm": ">=10"
	},
	"scripts": {
		"format": "prettier --ignore-path .gitignore --write .",
		"format:check": "npm run format -- --check",
		"verify": "npm run format:check && npm run lint",
		"prepare": "npm run verify"
	},
	"devDependencies": {
		"prettier": "^3.4.2"
	},
	"peerDependencies": {
		"typescript": "^5.5"
	}
}
