{
	"name": "tsconfig-willclarktech",
	"version": "0.0.0",
	"description": "Default TypeScript configuration for personal projects.",
	"files": [
		"*.json",
		"*.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/willclarktech/tsconfig-willclarktech"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"format": "prettier --write \"*.json\"",
		"format:check": "prettier --check *.json",
		"lint": "echo \"Skipped: json only repo\"",
		"lint:fix": "echo \"Skipped: json only repo\"",
		"test": "echo \"Error: no test specified\" && exit 1",
		"verify": "npm run format:check && npm run lint",
		"prepare": "npm run verify"
	},
	"peerDependencies": {
		"typescript": "~5.4.5"
	},
	"devDependencies": {
		"prettier": "^3.3.2"
	}
}
